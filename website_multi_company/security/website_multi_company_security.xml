<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="website_rule_company" model="ir.rule">
    <field name="name">website_designer: Manage only own Company's Websites</field>
    <field name="model_id" ref="website.model_website"/>
    <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
    <field name="groups" eval="[(4, ref('website.group_website_designer'))]"/>
    <field name="perm_read" eval="False"/>
    <field name="perm_write" eval="True"/>
    <field name="perm_create" eval="False"/>
    <field name="perm_unlink" eval="True"/>
  </record>
</odoo>
